{
    "name": "codeguard-copilot",
    "displayName": "AI CodeGuard Co-pilot",
    "description": "Real-time security vulnerability detection with AI-powered explanations - catches vulnerabilities as you code",
    "version": "0.1.0",
    "publisher": "inboxbodyguard",
    "author": {
        "name": "Niffy Hunt",
        "email": "ezmcyber@zohomail.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/inboxBodyguard/codeguard-copilot"
    },
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Linters",
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "security",
        "vulnerability",
        "scanner",
        "AI",
        "code-analysis",
        "sql-injection",
        "xss",
        "security-scanner"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "codeguard.scanFile",
                "title": "CodeGuard: Scan Current File",
                "icon": "$(shield)"
            },
            {
                "command": "codeguard.scanWorkspace",
                "title": "CodeGuard: Scan Entire Workspace"
            },
            {
                "command": "codeguard.explainVulnerability",
                "title": "CodeGuard: Explain This Vulnerability"
            }
        ],
        "keybindings": [
            {
                "command": "codeguard.scanFile",
                "key": "ctrl+shift+s",
                "mac": "cmd+shift+s",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "codeguard.scanFile",
                    "group": "navigation",
                    "when": "editorTextFocus"
                }
            ]
        },
        "configuration": {
            "title": "CodeGuard Co-pilot",
            "properties": {
                "codeguard.enableRealtime": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable real-time scanning as you type"
                },
                "codeguard.scanDelay": {
                    "type": "number",
                    "default": 500,
                    "description": "Delay in milliseconds before scanning after typing stops"
                },
                "codeguard.aiProvider": {
                    "type": "string",
                    "enum": ["anthropic", "groq", "openai"],
                    "default": "groq",
                    "description": "AI provider for deep security analysis"
                },
                "codeguard.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for AI provider"
                },
                "codeguard.enableAI": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable AI-powered deep analysis"
                },
                "codeguard.severityFilter": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["critical", "high", "medium", "low"]
                    },
                    "default": ["critical", "high", "medium", "low"],
                    "description": "Which severity levels to show"
                }
            }
        },
        "colors": [
            {
                "id": "codeguard.criticalHighlight",
                "description": "Background color for critical vulnerabilities",
                "defaults": {
                    "dark": "#ff000033",
                    "light": "#ff000022",
                    "highContrast": "#ff000044"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {}
}